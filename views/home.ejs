<%- include("partials/header"); -%>
<div class="home container">
  <div id="logo"></div>
  <p class="posts" id="intro">
    Project development updates, games discussions, and other random things.
  </p>
</div>

<div class="postsContainer">
  <% posts.forEach(function(post){ %>
    <div class="posts container">
      <a href="/posts/<%=post._id%>">
        <h1><%=post.title%></h1>
        <p>
          <%-post.content.substring(0, 400) + " ..."%>
        </p>
      </a>
    </div>
  <% }) %>
</div>

<p class="pagination">
  <a class="pagination__next" href="page2.html">Next page</a>
</p>

<div class="container mailContainer">
  <h2>Contact me:</h2>
  <form action="/sendMail" method="POST">
    <div class="form-group">
      <label for="senderEmail">Email address</label>
      <input
        type="email"
        class="form-control"
        id="senderEmail"
        aria-describedby="emailHelp"
        placeholder="Enter e-mail"
        name="email"
      />
      <small id="emailHelp" class="form-text text-muted"
        >We'll never share your email with anyone else.</small
      >
    </div>
    <div class="form-group">
      <label for="subject">Subject</label>
      <input
        type="text"
        class="form-control"
        id="subject"
        placeholder="Subject"
        name="subject"
      />
    </div>
    <div class="form-group">
      <label for="text">Text</label>
      <textarea
        class="form-control"
        placeholder="Write your message..."
        name="text"
        id="mailText"
        cols="20"
        rows="10"
      ></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

<script src="/js/infinite-scroll.pkgd.min.js"></script>
<%- include("partials/footer"); -%>
